<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REQUEST ID                 : "
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/requestID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REQUEST DATE           :"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/requestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VAN PLATE NUMBER :"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/VanID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="38dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHILD ID                        :"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="60dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/childId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="58dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHILD FIRST NAME    :"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="80dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/childFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="78dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHILD LAST NAME     :"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="100dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/childLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="98dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHILD LOCATION        :"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="120dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/childLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="118dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHILD SCHOOL            :"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="140dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/childSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="169dp"
            android:layout_marginTop="138dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sssss"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/accept"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="165dp"
            android:background="@drawable/custombuttonno"
            android:text="ACCEPT" />

        <Button
            android:id="@+id/reject"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/custombuttonyes"
            android:text="REJEcT" />


        <!--<ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/imageView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:id="@+id/textView"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line2"
            android:textSize="15dp"
            android:layout_below="@+id/textView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView"/>-->
    </RelativeLayout>
</androidx.cardview.widget.CardView>
