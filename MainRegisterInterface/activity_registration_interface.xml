<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".RegistrationInterface">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="40dp"
        android:text="@string/smartvan"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="162dp"
        android:layout_marginTop="88dp"
        android:text="School Van Management System" />

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="610dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="150dp"
        android:elevation="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:text="REGISTER NOW"
            android:textColor="#E103F9"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:text="AS"
            android:textColor="#E103F9"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/vanOwnerRegister"
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="10dp">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ico" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="129dp"
                android:layout_height="63dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="40dp"
                android:text="Van Owner Registration"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/parentRegister"
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="10dp">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/parent_2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="129dp"
                android:layout_height="63dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="40dp"
                android:text="Parent Registration"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="118dp"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/smartvan" />


</RelativeLayout>